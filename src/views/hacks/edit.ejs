<!DOCTYPE html>
<html>
  <head>

    <% include ../static/partials/head.ejs %>

  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>
      
      <h1>Edit Hack</h1>
      <form action="/topics/<%= hack.topicId %>/hacks/<%= hack.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Hack Title</label>
          <input value="<%= hack.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="body">Hack body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter description"><%= hack.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
